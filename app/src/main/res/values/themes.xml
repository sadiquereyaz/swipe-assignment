<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SwipeAssignment" parent="android:Theme.Material.Light.NoActionBar" />
    <style name="Theme.SwipeAssignment.splash" parent="Theme.SwipeAssignment">
        <!-- Set the splash screen background, animated icon, and animation
        duration. -->
        <item name="windowSplashScreenBackground">@color/ic_launcher_background</item>

        <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated
             drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <!-- Required for animated icons. -->
        <item name="windowSplashScreenAnimationDuration">200</item>

        <!-- Set the theme of the Activity that directly follows your splash
        screen. This is required. -->
        <item name="postSplashScreenTheme">@style/Theme.SwipeAssignment</item>
    </style>
</resources>